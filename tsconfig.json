{
  "compilerOptions": {
    //    "target": "es5",
    "module": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    //    MODIFIED
    //    "plugins": [
    //      {
    //        "name": "next"
    //      }
    //    ],
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      // This helps TypeScript resolve module paths without extensions
      //      "@/*": [
      //        "src/*"
      //      ]
      //      "@/app/*": [
      //        "src/app/*"
      //      ],
      //      "@/components/*": [
      //        "src/components/*"
      //      ],
      //      "@/lib/*": [
      //        "./src/lib/*"
      //      ],
      //      "@/hooks/*": [
      //        "./src/hooks/*"
      //      ]
    }
  },
  "include": [
    "next-env.d.ts",
    //    "src/**/*.tsx",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "build/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
